<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchChoose"
    android:background="#EFE7E7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/attendance_card"
                android:layout_margin="20dp"
                android:id="@+id/batting">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Batting Stats"
                    android:textFontWeight="360"
                    android:textSize="24sp"
                    android:padding="36dp"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-condensed-medium"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/attendance_card"
                android:layout_margin="20dp"
                android:id="@+id/bowling">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bowling Stats"
                    android:textFontWeight="360"
                    android:textSize="24sp"
                    android:padding="36dp"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-condensed-medium"/>

            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/attendance_card"
                android:layout_margin="20dp"
                android:id="@+id/livematch">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Live Match Score"
                    android:textFontWeight="360"
                    android:textSize="24sp"
                    android:padding="36dp"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-condensed-medium"/>

            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/attendance_card"
                android:layout_margin="20dp"
                android:id="@+id/updateScore"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Score"
                    android:textFontWeight="360"
                    android:textSize="24sp"
                    android:padding="36dp"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-condensed-medium"/>

            </RelativeLayout>

        </RelativeLayout>



    </LinearLayout>


</ScrollView>